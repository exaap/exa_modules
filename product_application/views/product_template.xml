<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="edit_applications_fields" invisible="1"/>
                <field name="product_apllication_id" widget="many2many_tags" attrs="{'readonly':[('edit_applications_fields', '=', False)]}"/>
                <field name="application_category_id" attrs="{'readonly':[('edit_applications_fields', '=', False)]}"/>
                <field name="application_line_id" domain="[('parent_id', '=', application_category_id)]" attrs="{'readonly':[('edit_applications_fields', '=', False)]}"/>
                <field name="application_subline_id" domain="[('parent_id', '=', application_line_id)]" attrs="{'readonly':[('edit_applications_fields', '=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>

            <xpath expr="//field[@name='type']" position="after">
                <field name="product_apllication_ids" widget="many2many_tags" groups="product_aplicattion.product_application_group_manager"/>
                <field name="product_application_category_ids" widget="many2many_tags" groups="product_aplicattion.product_application_group_manager"/>
                <field name="child_ids" widget="many2many_tags" groups="product_aplicattion.product_application_group_manager"/>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_stock_inventory']" position="after">
                <field name="initial_position" groups="exa_stock_control.exa_stock_control_group_manager_position" />
                <field name="final_position" groups="exa_stock_control.exa_stock_control_group_manager_position" />
                <field name="position_product" groups="exa_stock_control.exa_stock_control_group_manager_position"/>
            </xpath>
        </field>
    </record>
</odoo>

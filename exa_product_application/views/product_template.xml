<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_applications_action" model="ir.actions.act_window">
        <field name="name">Action Product Applications</field>
        <field name="res_model">product.application</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="product_application_type_action" model="ir.actions.act_window">
        <field name="name">Action Product Aplication Type</field>
        <field name="res_model">product.application.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_apllications" name="Product Application" parent="sales_team.menu_sales" sequence="15" action="product_applications_action" />
    <menuitem id="menu_product_application_type" name="Product Application Type" parent="sales_team.menu_sales" sequence="16" action="product_application_type_action"/>


    <record id="product_application_view_form" model="ir.ui.view">
        <field name="model">product.application</field>
        <field name="arch" type="xml">
            <form string="Product Application">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="product_application_type" />
                        <field name="product_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_application_product" model="ir.ui.view">
        <field name="model">product.application</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_application_type" />
                <field name="product_ids" />
            </tree>
        </field>
    </record>


    <record id="inherit_view_product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="apllication_ids" widget="many2many_tags" groups="exa_product_application.product_application_group_manager"/>
            </xpath>
        </field>
    </record>

    <record id="product_application_type_view_form" model="ir.ui.view">
        <field name="model">product.application.type</field>
        <field name="arch" type="xml">
            <form string="Product Apllication Type">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="reference_type" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_application_type_view_tree" model="ir.ui.view">
        <field name="model">product.application.type</field>
        <field name="arch" type="xml">
            <tree string="Product Apllication Type">
                <field name="name" />
                <field name="reference_type" />
            </tree>
        </field>
    </record>
</odoo>
